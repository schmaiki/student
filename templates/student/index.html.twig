{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Email</th>
                <th>Eintrittsdatum</th>
                <th>Kommentar</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.Vorname }}</td>
                <td>{{ student.Nachname }}</td>
                <td>{{ student.Email }}</td>
                <td>{{ student.Eintrittsdatum ? student.Eintrittsdatum|date('Y-m-d') : '' }}</td>
                <td>{{ student.Kommentar }}</td>
                <td>
                    <a href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_new') }}">Create new</a>
{% endblock %}
